<Window
    x:Class="XerahS.RegionCapture.Example.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="XerahS Region Capture - Example">

    <Grid x:Name="RootGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Controls -->
        <StackPanel Grid.Row="0" Padding="20" Spacing="10">
            <TextBlock Text="XerahS Region Capture Demo"
                       FontSize="24"
                       FontWeight="SemiBold"/>

            <TextBlock Text="Press the button below or use the hotkey (Ctrl+Shift+R) to start region capture."
                       TextWrapping="Wrap"
                       Opacity="0.8"
                       Margin="0,0,0,10"/>

            <Button x:Name="StartCaptureButton"
                    Content="Start Region Capture (Ctrl+Shift+R)"
                    Click="StartCaptureButton_Click"
                    HorizontalAlignment="Left"
                    Padding="16,8"/>

            <CheckBox x:Name="WindowDetectionCheckBox"
                      Content="Enable window auto-detection"
                      IsChecked="True"
                      Margin="0,10,0,0"/>

            <CheckBox x:Name="ShowCrosshairCheckBox"
                      Content="Show crosshair"
                      IsChecked="True"/>

            <CheckBox x:Name="ShowHUDCheckBox"
                      Content="Show coordinate HUD"
                      IsChecked="True"/>

            <CheckBox x:Name="EdgeSnappingCheckBox"
                      Content="Enable edge snapping"
                      IsChecked="True"/>
        </StackPanel>

        <!-- Results display -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel x:Name="ResultsPanel" Spacing="10">
                <TextBlock Text="Capture Results:" FontWeight="SemiBold" FontSize="16"/>
                <TextBlock x:Name="StatusText"
                           Text="No capture yet. Click the button above to start."
                           TextWrapping="Wrap"
                           Opacity="0.8"/>

                <Border x:Name="ResultsContainer"
                        Visibility="Collapsed"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,10,0,0">
                    <StackPanel Spacing="8">
                        <TextBlock x:Name="ResultText"
                                   FontFamily="Consolas"
                                   TextWrapping="Wrap"/>

                        <Image x:Name="ResultImage"
                               MaxHeight="400"
                               HorizontalAlignment="Left"
                               Margin="0,10,0,0"/>

                        <Button x:Name="SaveButton"
                                Content="Save to Pictures"
                                Click="SaveButton_Click"
                                Visibility="Collapsed"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
